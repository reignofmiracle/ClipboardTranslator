{
  "name": "clipboardtranslator",
  "productName": "ClipboardTranslator",
  "version": "1.1.1",
  "description": "simple clipboard translator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "Electron",
    "clipboard",
    "translator"
  ],
  "homepage": "https://github.com/reignofmiracle/ClipboardTranslator",
  "author": "reignofmiracle@gmail.com",
  "license": "MIT",
  "build": {
    "productName": "ClipboardTranslator",
    "appId": "com.beycat.ClipboardTranslator",
    "asar": true,
    "protocols": {
      "name": "ClipboardTranslator",
      "schemes": [
        "ClipboardTranslator"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./icon/ClipboardTranslator.icns"
    },
    "dmg": {
      "title": "ClipboardTranslator",
      "icon": "./icon/ClipboardTranslator.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis",
        "portable"
      ],
      "icon": "./icon/ClipboardTranslator.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "icon/",
      "output": "release/",
      "app": "./"
    }
  },
  "dependencies": {
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0"
  }
}
